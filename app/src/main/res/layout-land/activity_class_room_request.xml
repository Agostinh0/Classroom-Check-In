<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ClassRoomRequestActivity">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewTeacher"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="44dp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent" android:textSize="20sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvDate"
            android:textSize="20sp"
            android:layout_marginStart="152dp" android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="20sp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="20sp"
            android:layout_marginStart="36dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="28dp"/>
    <EditText
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/tfStartTime"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="28dp"
            android:layout_marginTop="208dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="20sp"
            android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="32dp"/>
    <TextView
            android:text="@string/endingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="352dp"
            android:textSize="20sp" android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/tfEndTime"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="40dp" android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvClassroom" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Switch
            android:text="@string/projector"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:id="@+id/projectorSwitch" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="352dp" android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnConfirm" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="416dp"
            android:layout_marginTop="220dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>