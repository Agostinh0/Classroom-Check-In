<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="368dp"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/listRoot">
        <TextView
                android:text="Teacher: "
                android:textColor="#ff0051"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvTeacher" android:textSize="20sp"/>
        <TextView
                android:text="Lab:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvLab"/>
        <TextView
                android:text="Date:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvDate"/>
        <TextView
                android:text="Time:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvTime"/>
        <TextView
                android:text="Projector?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvProjector"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>